            <div class="row">
                <div class="col-lg-7">
                    <h2 class="section-heading"><strong>Create a new reservation</strong></h2>
                </div>
            </div>

            <form class="trip-form" method="post" action="@Url.Action("Create", "Reservations")">
                @Html.AntiForgeryToken()
                <input name="BikeId" type="hidden" value="@bike.BikeId"/>

                <div class="row align-items-center">

                    <div class="mb-3 mb-md-0 col-md-3">
                        <div class="listing-img h-100 mr-4">
                            <img src="@bike.PhotoUrl" alt="@bike.Name" width="140">
                        </div>
                        <div class="listing-contents h-100">
                            <p>@bike.Name</p>
                        </div>
                    </div>
                    <div class="mb-3 mb-md-0 col-md-3">
                        <div class="form-control-wrap">
                            <input type="text" id="cf-3" name="DateStart" placeholder="Pick up" class="form-control datepicker px-3">
                            <span class="icon icon-date_range"></span>
                        </div>
                    </div>
                    <div class="mb-3 mb-md-0 col-md-3">
                        <div class="form-control-wrap">
                            <input type="text" id="cf-4" name="DateEnd" placeholder="Drop off" class="form-control datepicker px-3">
                            <span class="icon icon-date_range"></span>
                        </div>
                    </div>
                    <div class="mb-3 mb-md-0 col-md-3">
                        <input type="submit" value="Rent Now" class="btn btn-primary btn-block py-3">
                    </div>
                </div>

            </form>
        </div>
